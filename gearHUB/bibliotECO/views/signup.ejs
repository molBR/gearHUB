<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Cadastro de professor</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="text/javascript" src="/Public/jquery-3.2.1.js"></script>
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>



<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Cadastro De Professor</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Nome</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Senha</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
            <label>SIAPE</label>
            <input type="text" class="form-control" name="siape">
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Cadastrar Professor</button>

    </form>

    <hr>

    <p><a href="/">Voltar</a>.</p>

</div>


</div>

<center>
<% if(admin.local.acesso == "admin"){ %>
<h2>USU√ÅRIOS CADASTRADOS</h2>

<% for(var i=0; i<users.length; i++) { %>
    <% if (admin.local.siape != users[i].local.siape){ %>
        <div class="well">
           <li><label>Nome: </label><%= users[i].local.name %></li>
           <ul>
            <form action="/delUser" method="post">
            <label>Email: </label><%=users[i].local.email %><br> 
            <label>SIAPE: </label><%=users[i].local.siape %><br>
            <button id="bot" type="submit" name="botao" value="<%=users[i]._id%>"><i class="fa fa-trash" aria-hidden="true"  ></i></button>
           </ul>
       </div>
    <% } %>

<% } %>


<% } %>


</center>


<script>
$( "#bot" ).click(function() {
  alert( "Handler for .click() called." );
});
</script>
</body>
</html>
